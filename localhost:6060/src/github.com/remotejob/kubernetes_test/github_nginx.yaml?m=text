apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: githubnginx
spec:
  template:
    metadata:
      labels:
        run: githubnginx
    spec:
      volumes:
      - name: www-data
        emptyDir: {}
      containers:
      - name: nginx
        image: nginx
        volumeMounts:
        - mountPath: /usr/share/nginx
          name: www-data
        ports:
        - containerPort: 80
      - name: git-sync
        image: gcr.io/jntlserv0/git-sync:0.0
        volumeMounts:
        - mountPath: /usr/share/nginx 
          name: www-data

